# Railway Environment Configuration
# This file contains Railway-specific environment variables

# Application
APP_NAME="Regulação List"
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_PUBLIC_DOMAIN}
APP_KEY=

# Logging
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info
LOG_STDERR_FORMATTER="Monolog\Formatter\JsonFormatter"

# Database (Railway PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}
DATABASE_URL=${DATABASE_URL}

# Alternative: MySQL (if using Railway MySQL)
# DB_CONNECTION=mysql
# DB_HOST=${MYSQLHOST}
# DB_PORT=${MYSQLPORT}
# DB_DATABASE=${MYSQLDATABASE}
# DB_USERNAME=${MYSQLUSER}
# DB_PASSWORD=${MYSQLPASSWORD}
# DATABASE_URL=${DATABASE_URL}

# Cache & Sessions (use database for Railway)
BROADCAST_DRIVER=log
CACHE_DRIVER=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Redis (if using Railway Redis)
# REDIS_HOST=${REDISHOST}
# REDIS_PASSWORD=${REDISPASSWORD}
# REDIS_PORT=${REDISPORT}
# REDIS_URL=${REDIS_URL}
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (if using Railway S3-compatible storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Railway-specific optimizations
RAILWAY_HEALTHCHECK_TIMEOUT_SEC=300
PORT=${PORT}

# Security
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=${RAILWAY_PUBLIC_DOMAIN}

# Performance
OPTIMIZE_CLEAR_COMPILED=true
VIEW_CACHE_PATH=/tmp/views
